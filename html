    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.category-card');

            // ุฅุนุฏุงุฏ ูุฑุงูุจ ุงูุชูุงุนู (Intersection Observer)
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    // ุฅุฐุง ูุงู ุงูุนูุตุฑ ูุฑุฆูุงู
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible'); // ุฅุถุงูุฉ ููุงุณ 'visible' ูุชุดุบูู ุญุฑูุฉ CSS
                        observer.unobserve(entry.target); // ุฅููุงู ุงููุฑุงูุจุฉ ุจุนุฏ ุธููุฑ ุงูุนูุตุฑ
                    }
                });
            }, {
                threshold: 0.1 // ุชุดุบูู ุงูุญุฑูุฉ ุนูุฏูุง ูููู 10% ูู ุงูุนูุตุฑ ูุฑุฆูุงู
            });

            // ุชุทุจูู ุงููุฑุงูุจุฉ ุนูู ุฌููุน ุจุทุงูุงุช ุงููุชุจ
            cards.forEach(card => {
                observer.observe(card);
            });
        });
